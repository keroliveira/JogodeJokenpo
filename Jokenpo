#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main (){

    int escolhadojogador;
    int escolhadocomputador;

    srand(time(0));

    printf("*****************************************\n");
    printf("************ Jogo de Jokenpô ************\n");
    printf("*****************************************\n");
    printf("Escolha uma das opções abaixo:\n");
    printf("1. Pedra\n");
    printf("2. Papel\n");
    printf("3. Tesoura\n");
    printf("Escolha: ");
    scanf("%d", &escolhadojogador);

    escolhadocomputador = rand() % 3 + 1;
    
    //Escolha do jogador
    switch (escolhadojogador){
    case 1:
        printf("Jogador: Pedra - ");
        break;
    case 2:
        printf("Jogador: Papel - ");
        break;
    case 3:
        printf("Jogador: Tesoura - ");
        break;
    default:
        printf("Opção inválida\n");
        break;
    }

    //Escolha do computador
    switch (escolhadocomputador){
    case 1:
        printf("Computador: Pedra\n");
        break;
    case 2:
        printf("Computador: Papel\n");
        break;
    case 3:
        printf("Computador: Tesoura\n");
        break;
    }

    // Lógica do jogo: situação de empate 
    if (escolhadojogador == escolhadocomputador){
        printf("*****Empate*****\n");
    }

    // Lógica do jogo: condução por meio das situações em que há a vitória do jogador
    else if ((escolhadojogador == 1) && (escolhadocomputador == 3) || (escolhadojogador == 2) && (escolhadocomputador == 1) || (escolhadojogador == 3) && (escolhadocomputador == 2)){
        printf("******Você ganhou!******\n");
    }
    else{
        printf("******Você perdeu!******\n");
    }
        
    return 0;

}
